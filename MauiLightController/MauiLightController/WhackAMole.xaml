<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLightController.WhackAMole"
             Title="WhackAMole">
    <VerticalStackLayout>
        <Label 
            x:Name="RulesLabel"
            Text="Point your phone to the light until it buzzes to score points"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ProgressBar
            x:Name="TimeProgressBar"
            Progress="1"/>
        <Button
            x:Name="StartButton"
            Clicked="StartButton_Clicked"/>
        <Label 
            x:Name="ScoreLabel"
            Text="0"
            FontSize="Large"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            IsVisible="false"/>
        <Image
            x:Name="arrow"
            Source="Images/arrow"/>
    </VerticalStackLayout>
</ContentPage>